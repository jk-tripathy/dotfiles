#
# wm independent hotkeys
#

# terminal emulator
super + Return
	kitty

# program launcher
super + @space
    rofi -show drun -padding 1080

# program switcher 
super + ctrl + @space
    rofi -show window -padding 1080

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#shutdown computer
ctrl + alt + s
    shutdown now

#
# Volume 
#
XF86Audio{RaiseVolume,LowerVolume}
    pulsemixer --change-volume {+,-}5
XF86AudioMute
    pulsemixer --toggle-mute
XF86AudioMicMute
    amixer set Capture toggle

#
# Player Controls
#
F9
    playerctl previous
F10
    playerctl play
F11
    playerctl pause
F12
    playerctl next
#
# Brightness Control
#
XF86MonBrightness{Up,Down}
    brightnessctl s 10{+,-}

#
# bspwm hotkeys
#

# quit/restart bspwm
super + r
	bspc wm -r

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# min win
super + shift + m
    ~/.config/winmin.sh

# lock computer
ctrl + alt + l
    betterlockscreen -l pixel


#
# state/flags
#

# set the window state
super + {t,shift+t, shift + f}
	bspc node -t {tiled,floating,fullscreen}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Rotate tree
super + shift + {d,a}
    bspc node @/ -C {forward,backward}

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + ctrl + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#
# Apps Hotkeys
#
# screenshot -> clipboard
super + s
    maim -s -u | xclip -selection clipboard -t image/png -i

# browser 
super + b
    google-chrome-stable

# Thunar
super + f
    thunar

# btop
ctrl + shift + Escape
    kitty --hold btop

# bluemail
super + e
    bluemail

# maim printscreen
super + Print
    maim ~/Pictures/screenshots/$(date "+%d-%m-%Y_%T").png 

# maim current window ss
super + shift + Print
    maim -i $(xdotool getactivewindow) ~/Pictures/screenshots/$(date "+%d-%m-%Y_%T").png 

# notion    
super + c
    code
